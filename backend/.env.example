# Required - Get from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Optional - Get from https://huggingface.co/settings/tokens (not currently used)
HF_TOKEN=your_huggingface_token_here

# AI Configuration
GEMINI_MODEL=gemini-2.5-flash

# API Configuration
API_TIMEOUT=15.0              # Timeout for external API calls in seconds
CACHE_TTL_DRUG=3600           # Drug cache TTL in seconds (1 hour)
CACHE_TTL_ALERT=7200          # Alert cache TTL in seconds (2 hours)

# Server Configuration
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Limits
MAX_UPLOAD_SIZE_MB=10
MAX_HISTORY_MESSAGES=10
MAX_RESPONSE_LENGTH=2000      # Max response length in characters

# Supabase Configuration - Get from Supabase Dashboard > Project Settings > API
SUPABASE_URL=your_supabase_url_here    # Project URL
SUPABASE_KEY=your_supabase_anon_key_here  # Anon/public key (NOT service_role key)

# Turso Configuration (Drug Data Storage) - Get from https://turso.tech/
TURSO_DATABASE_URL=your_turso_database_url_here
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Qdrant Configuration (Vector Embeddings) - Get from https://qdrant.tech/
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here

# Groq Configuration (Fallback for Gemini) - Get from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-120b

# ============================================================================
# WEB SEARCH CONFIGURATION (Optional - pick ONE)
# ============================================================================

# Serper API (Google Search) - Get from https://serper.dev/ (FREE: 2,500/month)
SERPER_API_KEY=your_serper_api_key_here

# Brave Search API (Fallback) - Get from https://brave.com/search/api/ (FREE: 2,000/month)
BRAVE_API_KEY=your_brave_api_key_here

# LangSearch API (LLM-optimized) - Get from https://langsearch.com/ (FREE: Unlimited)
LANGSEARCH_API_KEY=your_langsearch_api_key_here

# ============================================================================
# MARKETPLACE CONFIGURATION
# ============================================================================

# Razorpay Configuration - Get from https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Agora Configuration (Voice Calls) - Get from https://console.agora.io/
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
AGORA_TOKEN_EXPIRY_SECONDS=3600

# Marketplace Business Rules
PLATFORM_FEE_PERCENT=20
MIN_CONSULTATION_RATE=99
MAX_CONSULTATION_RATE=9999
MIN_PAYOUT_AMOUNT=500
